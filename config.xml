<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>FirstApp</name>
    <description>
        A blank PhoneGap app.
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        PhoneGap Team
    </author>
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />

    <platform name="browser">
        <preference name="SplashScreen" value="res/splash/android/drawable-ldpi.png"/>
    </platform>

    <preference name="SplashScreenDelay" value="2000" />
    <preference name="SplashScreenBackgroundColor" value="black" />
    
    <icon src="www/res/icon/android/icon-ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="www/res/icon/android/icon-mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="www/res/icon/android/icon-hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="www/res/icon/android/icon-xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="www/res/icon/android/icon-xxhpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="www/res/icon/android/icon-xxxhdpi.png" platform="android" qualifier="xxxhdpi" />

    <splash src="www/res/splash/android/drawable-ldpi.png" platform="android" qualifier="ldpi" />
    <splash src="www/res/splash/android/drawable-mdpi.png" platform="android" qualifier="mdpi" />
    <splash src="www/res/splash/android/drawable-hdpi.png" platform="android" qualifier="hdpi" />
    <splash src="www/res/splash/android/drawable-xhdpi.png" platform="android" qualifier="xhdpi" />
    <splash src="www/res/splash/android/drawable-xxxhdpi.png" platform="android" qualifier="xxxhdpi" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
