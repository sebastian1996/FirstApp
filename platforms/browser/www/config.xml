<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>FirstApp</name>
    <description>
        A blank PhoneGap app.
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        PhoneGap Team
    </author>
    <content src="index.html" />
    <icon platform="android" qualifier="ldpi" src="www/res/icon/android/icon-ldpi.png" />
    <icon platform="android" qualifier="mdpi" src="www/res/icon/android/icon-mdpi.png" />
    <icon platform="android" qualifier="hdpi" src="www/res/icon/android/icon-hdpi.png" />
    <icon platform="android" qualifier="xhdpi" src="www/res/icon/android/icon-xhdpi.png" />
    <icon platform="android" qualifier="xxhdpi" src="www/res/icon/android/icon-xxhpi.png" />
    <icon platform="android" qualifier="xxxhdpi" src="www/res/icon/android/icon-xxxhdpi.png" />
    <splash platform="android" qualifier="ldpi" src="www/res/splash/android/drawable-ldpi.png" />
    <splash platform="android" qualifier="mdpi" src="www/res/splash/android/drawable-mdpi.png" />
    <splash platform="android" qualifier="hdpi" src="www/res/splash/android/drawable-hdpi.png" />
    <splash platform="android" qualifier="xhdpi" src="www/res/splash/android/drawable-xhdpi.png" />
    <splash platform="android" qualifier="xxxhdpi" src="www/res/splash/android/drawable-xxxhdpi.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="SplashScreenBackgroundColor" value="black" />
    <preference name="SplashScreen" value="res/splash/android/drawable-ldpi.png" />
</widget>
